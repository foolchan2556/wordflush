<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg1" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<AnalogClock android:layout_gravity="center" android:id="@+id/analogClock1"
		android:layout_width="114dp" android:layout_height="108dp"
		android:layout_marginTop="30dip"></AnalogClock>
	<Button android:id="@+id/button2" android:text="浏览单词"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:layout_marginTop="40dip"></Button>
	<Button android:id="@+id/button3" android:text="单词复习"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:layout_marginTop="10dip"></Button>
	<Button android:id="@+id/button1" android:text="选择词库"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:layout_marginTop="10dip"></Button>
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:orientation="vertical"></LinearLayout>
	<TextView android:layout_height="wrap_content" android:id="@+id/textView1"
		android:textColor="@color/dgray" android:text="@string/copyright"
		android:layout_width="wrap_content" android:layout_gravity="center"
		android:layout_marginTop="40dip"></TextView>
</LinearLayout>
