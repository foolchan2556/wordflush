<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:background="@drawable/bg1"
    android:id="@+id/widget" android:layout_height="wrap_content"
    android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Icon -->
    <ImageView android:scaleType="fitXY" android:layout_height="@dimen/image_height" android:id="@+id/icon" android:layout_width="@dimen/image_width" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></ImageView>
    <!-- spell -->
    <TextView android:id="@+id/spell" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_width="fill_parent" android:singleLine="true" android:textSize="25sp" android:textColor="@color/black" android:layout_marginLeft="10dip" android:layout_marginBottom="3dip"/>
    <!-- meaning -->
    <TextView android:id="@+id/meaning" android:layout_below="@id/spell"
        android:layout_toRightOf="@id/icon"
        android:layout_width="fill_parent" android:singleLine="true" android:textSize="20sp" android:layout_alignBottom="@+id/icon" android:textColor="@color/blue" android:layout_marginLeft="10dip" android:layout_marginBottom="3dip" android:layout_height="match_parent"/>
</RelativeLayout>
